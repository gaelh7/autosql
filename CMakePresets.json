{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/build/install",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "GCC",
      "inherits": "base",
      "displayName": "GCC",
      "description": "Using compilers for GCC",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "cl",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "cl-x64",
      "inherits": [
        "cl",
        "windows-base"
      ],
      "displayName": "Visual Studio Build Tools - x64",
      "description": "Using compilers for Visual Studio (x64 target architecture)"
    },
    {
      "name": "cl-x86",
      "inherits": [
        "cl",
        "windows-base"
      ],
      "displayName": "Visual Studio Build Tools - x86",
      "description": "Using compilers for Visual Studio (x86 target architecture)",
      "architecture": {
        "value": "win32"
      }
    },
    {
      "name": "clang",
      "inherits": "base",
      "displayName": "Clang",
      "description": "Using compilers for Clang (GNU CLI)",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "clang-cl",
      "inherits": "base",
      "displayName": "ClangCL",
      "description": "Using compilers for Clang (MSVC CLI)"
    }
  ]
}
